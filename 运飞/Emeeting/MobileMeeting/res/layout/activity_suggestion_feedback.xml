<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <cn.com.zte.emeeting.app.views.TopBar
        android:id="@+id/topbar_suggestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D7D7D7" >
    </cn.com.zte.emeeting.app.views.TopBar>

    <TextView
        android:id="@+id/tv_suggess"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/topbar_suggestion"
        android:background="@color/SFBtitleBgColor"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="@string/tv_your_suggertion"
        android:textColor="@color/SFBtitleTvColor"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/edt_suggess"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_below="@+id/tv_suggess"
        android:background="@null"
        android:gravity="top|left"
        android:padding="15dp"
        android:singleLine="false"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_contact_way"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/edt_suggess"
        android:background="@color/SFBtitleBgColor"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="@string/tv_contact_way"
        android:textColor="@color/SFBtitleTvColor"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/edt_contact_way"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/tv_contact_way"
        android:background="@null"
        android:inputType="number"
        android:maxLength="11"
        android:padding="15dp"
        android:singleLine="true"
        android:textSize="15sp" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lin"
        android:layout_below="@+id/edt_contact_way"
        android:background="@color/SFBbtnViewBgColor" />

    <LinearLayout
        android:id="@+id/lin"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_cancel"
            style="@style/TextSizeStyle_16"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@color/SFBbtnCancleBgColor"
            android:gravity="center"
            android:text="@string/tv_cancel"
            android:textColor="@color/PVFPreTextColor" />

        <TextView
            android:id="@+id/tv_sure"
            style="@style/TextSizeStyle_16"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@color/SFBbtnSureBgColor"
            android:gravity="center"
            android:text="@string/tv_suress"
            android:textColor="@color/PVFPreTextColor" />
    </LinearLayout>

</RelativeLayout>