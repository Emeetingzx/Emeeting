<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >
    
     <Button 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/TransparencyColor"
        />

    <cn.com.zte.emeeting.app.views.TopBar
        android:id="@+id/setfragment_topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black" >
    </cn.com.zte.emeeting.app.views.TopBar>

    <View
        android:id="@+id/view_1"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/setfragment_topbar"
        android:background="@color/SFViewBgColor" />

    <RelativeLayout
        android:id="@+id/rel_suggestion_feedback"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/view_1"
        android:background="@drawable/topbar_btn_image" >

        <TextView
            style="@style/TextSizeStyle_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="@string/tv_suggestion"
            android:textColor="@color/SFContentTextColor" />

        <ImageView
            android:layout_width="8dp"
            android:layout_height="14dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/ico_g_right" />
    </RelativeLayout>

    <View
        android:id="@+id/view_2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rel_suggestion_feedback"
        android:layout_marginLeft="20dp"
        android:background="@color/SFViewBgColor" />

    <RelativeLayout
        android:id="@+id/rel_guide"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/view_2"
        android:background="@drawable/topbar_btn_image" >

        <TextView
            style="@style/TextSizeStyle_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="@string/tv_guide"
            android:textColor="@color/SFContentTextColor" />

        <ImageView
            android:layout_width="8dp"
            android:layout_height="14dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/ico_g_right" />
    </RelativeLayout>

    <View
        android:id="@+id/view_3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rel_guide"
        android:layout_marginLeft="20dp"
        android:background="@color/SFViewBgColor" />

    <RelativeLayout
        android:id="@+id/rel_about"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/view_3"
        android:background="@drawable/topbar_btn_image" >

        <TextView
            style="@style/TextSizeStyle_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="@string/tv_about"
            android:textColor="@color/SFContentTextColor" />

        <ImageView
            android:layout_width="8dp"
            android:layout_height="14dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/ico_g_right" />
    </RelativeLayout>

    <View
        android:id="@+id/view_4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rel_about"
        android:layout_marginLeft="20dp"
        android:background="@color/SFViewBgColor" />

    <RelativeLayout
        android:id="@+id/rel_app_version"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/view_4"
        android:background="@drawable/topbar_btn_image" >

        <TextView
            android:id="@+id/tv_app_version"
            style="@style/TextSizeStyle_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="@string/tv_app_version"
            android:textColor="@color/SFContentTextColor" />

        <TextView
            android:id="@+id/tv_setFragment_version"
            android:layout_width="35dp"
            android:layout_height="14dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@+id/tv_app_version"
            android:background="@drawable/ico_g_new"
            android:gravity="center"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_version"
            style="@style/TextSizeStyle_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:textColor="@color/SFContentTextColor"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/rel_app_version"
        android:background="@color/SFViewBgColor" >

        <Button
            android:id="@+id/btn_logout"
            style="@style/TextSizeStyle_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/bgselector_btn_logout"
            android:text="@string/tv_push_login"
            android:textColor="@color/SFPushOutTextColor" />
    </LinearLayout>

</RelativeLayout>