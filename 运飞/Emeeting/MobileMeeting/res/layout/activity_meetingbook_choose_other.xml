<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <cn.com.zte.emeeting.app.views.TopBar
            android:id="@+id/topbar_meetingbook_choose_other"
            android:layout_width="fill_parent"
            android:layout_height="48dp" >
        </cn.com.zte.emeeting.app.views.TopBar>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" >

            <TextView
                android:layout_alignParentLeft="true"
                android:id="@+id/tv_chooseother_meetingname_label"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:text="@string/meeting_meetingname"
                android:textColor="@color/textcolor_gray_6"
                android:textSize="14sp" />

            <EditText
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tv_chooseother_meetingname_label"
                android:id="@+id/tv_chooseother_meetingname"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:maxLength="50"
                android:gravity="center_vertical|right"
                android:hint="@string/hint_input_meetingname"
                android:singleLine="true"
                android:textColorHint="@color/textcolor_gray_c"
                android:textColor="@color/textcolor_filter_blue"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:background="@color/bgcolor_filter_divider" />

        <RelativeLayout
            android:id="@+id/rl_choose_leader"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:text="@string/meeting_join_leader"
                android:textColor="@color/textcolor_gray_6"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_choose_leader"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:text="@string/meeting_join_leader_tmp"
                    android:textColor="@color/textcolor_filter_blue"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/ico_arrow_right" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:background="@color/bgcolor_filter_divider" />

        <RelativeLayout
            android:id="@+id/rl_choose_meetinglevel"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:text="@string/meeting_meeting_level"
                android:textColor="@color/textcolor_gray_6"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_choose_meetinglevel"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:text="@string/meeting_meeting_level_tmp"
                android:textColor="@color/textcolor_filter_blue"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:background="@color/bgcolor_filter_divider" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_ok_meetingbook_chooseother"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="@color/bgcolor_filter_yellow"
        android:text="@string/public_ok"
        android:textColor="@color/white"
        android:textSize="16sp" />

</RelativeLayout>
