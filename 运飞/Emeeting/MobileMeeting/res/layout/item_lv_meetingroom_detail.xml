<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:id="@+id/rl_item_meetingroomdetail_top"
        android:layout_height="40dp"
        android:layout_width="fill_parent"
        android:background="@color/bgcolor_filter_gray_f9"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        >
        <TextView
            	android:id="@+id/tv_item_meetingroomname_detail"
                style="@style/style_meetingdetail_left"
                android:text="@string/md_meeting_place_tmp"
                android:textColor="@color/textcolor_filter_blue"
                android:layout_toLeftOf="@+id/iv_ico_item_expand"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="20dp"
                 />
        <ImageView
            android:id="@+id/iv_ico_item_expand"
            android:layout_height="12dp"
            android:layout_width="16dp"
            android:layout_centerVertical="true"
            android:src="@drawable/bgselector_ico_item_lv_meetingroomdetail"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    
    
        <LinearLayout
        android:id="@+id/ll_item_meetingroomdetail_content"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        >
            <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" >

            <TextView
                style="@style/style_meetingdetail_left"
                android:text="@string/md_meetingroom_scale"
                 />

            <TextView
                android:id="@+id/tv_meetingdetail_meetingscale"
                style="@style/style_meetingdetail_right"
                android:text="@string/md_meetingroom_scale_tmp"
                android:layout_width="200dp"
                android:gravity="center_vertical|right"
                 />
        	</RelativeLayout>

	        <View
	            android:visibility="gone"
	            android:layout_width="fill_parent"
	            android:layout_height="1dp"
	            android:layout_marginLeft="20dp"
	            android:background="@color/bgcolor_filter_divider_d" />
            <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" >

            <TextView
                style="@style/style_meetingdetail_left"
                android:text="@string/md_meetingroom_tv_terminal"
                 />

            <TextView
                android:id="@+id/tv_meetingdetail_tv"
                style="@style/style_meetingdetail_right"
                android:text="@string/md_meetingroom_tv_terminal_tmp"
                android:layout_width="200dp"
                android:gravity="center_vertical|right"
                 />
        	</RelativeLayout>

	        <View
	            android:visibility="gone"
	            android:layout_width="fill_parent"
	            android:layout_height="1dp"
	            android:layout_marginLeft="20dp"
	            android:background="@color/bgcolor_filter_divider_d" />
            <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" >

            <TextView
                style="@style/style_meetingdetail_left"
                android:text="@string/md_meetingroom_meetingphone_2"
                 />

            <TextView
                android:id="@+id/tv_meetingdetail_phone"
                style="@style/style_meetingdetail_right"
                android:text="@string/md_meetingroom_meetingphone_tmp"
                android:layout_width="200dp"
                android:gravity="center_vertical|right"
                 />
        	</RelativeLayout>

	        <View
	            android:visibility="gone"
	            android:layout_width="fill_parent"
	            android:layout_height="1dp"
	            android:layout_marginLeft="20dp"
	            android:background="@color/bgcolor_filter_divider_d" />
            <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" >

            <TextView
                style="@style/style_meetingdetail_left"
                android:text="@string/md_meetingroom_projector"
                 />

            <TextView
                android:id="@+id/tv_meetingdetail_meetingprojector"
                style="@style/style_meetingdetail_right"
                android:text="@string/md_meetingroom_projector_tmp"
                android:layout_width="200dp"
                android:gravity="center_vertical|right"
                 />
        	</RelativeLayout>

	        <View
	            android:visibility="gone"
	            android:layout_width="fill_parent"
	            android:layout_height="1dp"
	            android:layout_marginLeft="20dp"
	            android:background="@color/bgcolor_filter_divider_d" />
            <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:paddingLeft="20dp"
            android:visibility="gone"
            android:paddingRight="20dp" >

            <TextView
                style="@style/style_meetingdetail_left"
                android:text="@string/md_meetingroom_type"
                 />

            <TextView
                style="@style/style_meetingdetail_right"
                android:text="@string/md_meetingroom_type_tmp"
                 />
        	</RelativeLayout>

	        <View
	            android:visibility="gone"
	            android:layout_width="fill_parent"
	            android:layout_height="1dp"
	            android:layout_marginLeft="20dp"
	            android:background="@color/bgcolor_filter_divider_d" />
	  </LinearLayout>
</LinearLayout>
