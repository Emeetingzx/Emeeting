<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
	<cn.com.zte.emeeting.app.views.TopBar
	    android:id="@+id/topbar_dlg_filter"
	    android:layout_height="wrap_content"
	    android:layout_width="fill_parent"
	    ></cn.com.zte.emeeting.app.views.TopBar>
	<RelativeLayout 
	    android:layout_height="wrap_content"
	    android:layout_width="fill_parent"
	    >
	<LinearLayout
	    android:layout_above="@+id/btn_dlg_filter_ok"
	    android:layout_height="fill_parent"
	    android:layout_width="fill_parent"
	    android:orientation="horizontal"
	    >
	    <LinearLayout
	        android:id="@+id/ll_dlg_filter_left"
	        android:layout_height="fill_parent"
	        android:layout_width="80dp"
	        android:orientation="vertical"
	        android:background="@color/bgcolor_filter_left"
	        >
	        
	        <TextView
	            android:id="@+id/tv_dlg_filter_left_1"
	            android:textSize="16sp"
	            android:layout_height="48dp"
	            android:layout_width="fill_parent"
	            android:text="@string/dlg_filter_label_device"
	            android:gravity="center"
	            android:textColor="@drawable/textcolor_item_filter_left"
	            android:background="@drawable/bgselector_dlg_filter_item"
	            />
	        <TextView
	            android:textSize="16sp"
	            android:id="@+id/tv_dlg_filter_left_2"
	            android:layout_height="48dp"
	            android:layout_width="fill_parent"
	            android:text="@string/dlg_filter_label_floor"
	            android:gravity="center"
	            android:textColor="@drawable/textcolor_item_filter_left"
	            android:background="@drawable/bgselector_dlg_filter_item"
	            />
	        <TextView
	            android:gravity="center"
	            android:textSize="16sp"
	            android:id="@+id/tv_dlg_filter_left_3"
	            android:layout_height="48dp"
	            android:layout_width="fill_parent"
	            android:text="@string/dlg_filter_label_personnum"
	            android:textColor="@drawable/textcolor_item_filter_left"
	            android:background="@drawable/bgselector_dlg_filter_item"
	            />
	        
	    </LinearLayout>
	    <LinearLayout
	        android:id="@+id/ll_dlg_filter_right"
	        android:layout_height="fill_parent"
	        android:layout_width="fill_parent"
	        android:orientation="vertical"
	        android:background="#fff"
	        android:gravity="center_horizontal"
	        >
			<include
			    android:id="@+id/ll_filter_dlg_right_1"
			    android:layout_height="wrap_content"
			    android:layout_width="fill_parent"
			    layout="@layout/layout_filter_dlg_right_1"
			    />
			<include 
			    android:id="@+id/ll_filter_dlg_right_2"
			    android:layout_height="wrap_content"
			    android:layout_width="fill_parent"
			    layout="@layout/layout_filter_dlg_right_2"
			    />
			
			<include 
			    android:id="@+id/ll_filter_dlg_right_3"
			    android:layout_height="wrap_content"
			    android:layout_width="fill_parent"
			    layout="@layout/layout_filter_dlg_right_3"
			    />
			
	    </LinearLayout>
	</LinearLayout>
	
	
	<Button
	    android:id="@+id/btn_dlg_filter_ok"
	    android:layout_height="48dp"
	    android:layout_width="fill_parent"
	    android:background="@color/bgcolor_filter_yellow"
	    android:text="确定"
	    android:textColor="@color/white"
	    android:textSize="16sp"
	    android:layout_alignParentBottom="true"
	    />
	</RelativeLayout>
</LinearLayout>
